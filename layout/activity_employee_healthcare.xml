<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmployeeHealthcareActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="409dp"
        android:layout_height="33dp"
        android:text="@string/title_activity_employee_healthcare"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#FF5722"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="2dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_height"
        tools:layout_editor_absoluteY="34dp" />

    <EditText
        android:id="@+id/edtHeight"
        android:layout_width="151dp"
        android:layout_height="33dp"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteY="59dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_weight"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="94dp" />

    <EditText
        android:id="@+id/edtWeight"
        android:layout_width="205dp"
        android:layout_height="34dp"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="126dp" />

    <Button
        android:id="@+id/btnCalculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_calculate"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="172dp" />

    <Button
        android:id="@+id/benClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_Clear"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="172dp" />

    <Button
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_close"
        tools:layout_editor_absoluteX="323dp"
        tools:layout_editor_absoluteY="173dp" />

    <EditText
        android:id="@+id/txtReseult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="262dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="92dp"
        android:layout_height="22dp"
        android:text="@string/title_result"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="229dp" />
</androidx.constraintlayout.widget.ConstraintLayout>